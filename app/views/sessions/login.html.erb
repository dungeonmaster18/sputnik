<% @page_title = "Sputnik | Login" %>

<h1>Log In</h1>
<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :login_email %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :login_password %>
  </div>
  <div class="actions"><%= submit_tag "Log In" %></div>
<% end %>