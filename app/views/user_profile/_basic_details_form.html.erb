<%= form_for @user_info, url: {action: "basic_details_submit"} do |f| %>
    <div class="form-group">
      <%= f.label :full_name %>
      <%= f.text_field :full_name, value: @user_info.full_name, required: true %>
    </div>
    <div class="form-group">
      <%= f.label :mobile %>
      <%= f.number_field :mobile, value: @user_info.mobile, required: true %>
    </div>
    <div class="form-group">
      <%= f.label :dob %>
      <%= f.date_field :dob, value: @user_info.dob, required: true %>
    </div>
    <div class="form-group">
      <%= f.label :gender %>
      <%= f.select(:gender, options_for_select([['Male','male'],['Female','female'],['Other','other']], @user_info.gender)) %>
    </div>
    <div class="form-group">
      <%= f.label :city %>
      <%= f.select(:city, options_for_select(@cities_names.map { |value| [ value, value ] }, @user_info.city)) %>
    </div>
    <br>
    <div class="actions"><%= f.submit "Submit" %></div>
<% end %>