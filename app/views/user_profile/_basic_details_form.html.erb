<%= form_for @user_info, url: {action: "basic_details_submit"} do |f| %>
    <div class="form-group">
      <%= f.label :full_name %>
      <%= f.text_field :full_name %>
    </div>
    <div class="form-group">
      <%= f.label :mobile %>
      <%= f.number_field :mobile %>
    </div>
    <div class="form-group">
      <%= f.label :dob %>
      <%= f.date_field :dob %>
    </div>
    <div class="form-group">
      <%= f.label :gender %>
      <%= f.select(:gender, options_for_select([['Male','male'],['Female','female'],['Other','other']])) %>
    </div>
    <br>
    <div class="actions"><%= f.submit "Submit" %></div>
  <% end %>