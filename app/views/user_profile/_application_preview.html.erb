<%
	@status_class = "warning"
%>


<table class="table">   
	<tbody>
      <tr class="<%= @status_class %>" >
        <td>Status</td>
        <td><%= @user_info.status %></td>
      </tr>
  </tbody>
 </table>

<table class="table">
 
    <tbody>
      <tr>
        <td>E-mail</td>
        <td><%= @user_info.email %></td>
      </tr> 
      <tr>
        <td>Full Name</td>
        <td><%= @user_info.full_name %></td>
      </tr>  
      <tr>
        <td>Gender</td>
        <td><%= @user_info.gender %></td>
      </tr> 
      <tr>
        <td>DoB</td>
        <td><%= @user_info.dob %></td>
      </tr> 
      <tr>
        <td>Mobile</td>
        <td><%= @user_info.mobile %></td>
      </tr> 
      <tr>
        <td>Driving License</td>
        <td>
        	
        	<% if @user_info.driving_license? %>
				<%= image_tag(@user_info.driving_license.url, size: "600x300") %>
			<% end %>
        </td>
      </tr> 
      <tr>
        <td>Vehicle Registration Card</td>
        <td>
        	
        	<% if @user_info.vehicle_registration_card? %>
				<%= image_tag(@user_info.vehicle_registration_card.url, size: "600x300") %>
			<% end %>
        </td>
      </tr> 

    </tbody>
  </table>
  <%= form_for @user_info, url: {action: "apply"},multipart: true do |f| %>
  	<div class="actions"><%= f.submit "Apply" %></div>
  <% end %>